#include <iostream>
#include <sstream>

using namespace std;

bool notBlank(string &x, string y, string z)
{
    bool valid = false;
    while(!valid)
    {
        cout << y << endl;
        getline(cin , x);
        while (x.length() ==0 )
        {
            cout << z << endl;
            cout << y << endl;
            getline(cin, x);
        }
        for(int i = 0; i < x.length(); i++)
        {
            char ch = x[i];
            if (!isspace(ch))
            {
                valid = true;
                return true;
            }
            else
            {
                cout << z << endl;
                break;
                
            }
            
        }
    }
    return false;
}
int main()
{
    string ageInput;
    notBlank(ageInput, "Please input the ticket-holders age", "That's not valid");
    for(int i = 0; i < ageInput.length(); i++)
    {
        if (isdigit(ageInput[i]) == true)
        {
            if(i + 1 == ageInput.length())
            {
                cout << "program continues" << endl;
            }
            else
            {
                
            }
        }
        else
        {
            cout << "Please enter a valid age" << endl;
            return 0;
        }
    }
    stringstream agePtr (ageInput);
    int age = 0;
    agePtr >> age;
    if(12 > age or age > 130)
    {
        cout << "Invalid input" << endl;
    }
    else
    {
        cout << "Valid input" << endl;
    }
    

    return 0;
}
