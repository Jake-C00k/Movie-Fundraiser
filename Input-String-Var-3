#include <iostream>

using namespace std;
bool notBlank(string &x, string y, string z)
{
    bool valid = false;
    while(!valid)
    {
        cout << y << endl;
        getline(cin , x);
        while (x.length() ==0 )
        {
            cout << z << endl;
            cout << y << endl;
            getline(cin, x);
        }
        for(int i = 0; i < x.length(); i++)
        {
            char ch = x[i];
            if (!isspace(ch))
            {
                valid = true;
                return true;
            }
            else
            {
                cout << z << endl;
                break;
                
            }
            
        }
    }
}

void stringInput(string &userInput, string x, string y)
{
    //Establish variables
    bool valid = false;
    
    //Iterating through the number of characters to check if a number is entered
    while(!valid)
    {
        string input;
        notBlank(userInput,x , y);
        for(int i = 0; i < input.length(); i++)
        {
            if (isalpha(input[i]) == false)
            {
                /*If the check returns false, the program checks if it is the last 
                character before outputting the return message*/
                if(i + 1 == input.length())
                {
                    userInput = input;
                    valid = true;
                }
  
                /*If the check for a number returns true at any point the loop will break
                and the program will return an error message to the user */
                cout << y << endl;
                break;
            }
            else
            {          }
    
        }    
    }
    cout << "*program continues*" << endl;
    
}

int main()
{
    string name;
    string commonOutput[2] = {"Please enter a valid input", "y"};
    stringInput(name, "Please input the ticket-holders name", commonOutput[0]);
    cout << name;
    return 0;
}
 
