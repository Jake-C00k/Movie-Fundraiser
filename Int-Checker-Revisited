#include <iostream>

using namespace std;
bool intChecker(string intInput)
{
    for(int i = 0; i < intInput.length(); i++)
    {
        if (isdigit(intInput[i]))
        {
            if(i + 1 == intInput.length())
            {
                return true;
            }
        }
        if(i + 1 == intInput.length())
        {
            cout << "Please enter a valid number" << endl;
        }
    }
    return false;
}

int main()
{
    string strNumber = "98";
    int number;
    if(intChecker(strNumber))
    {
        number = stoi(strNumber);
    }
    cout << number << endl;
}
