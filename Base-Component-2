#include <iostream>
#include <sstream>

using namespace std;
string ageInput;
bool notBlank(string &x, string y, string z)
{
    bool valid = false;
    while(!valid)
    {
        cout << y << endl;
        getline(cin , x);
        while (x.length() ==0 )
        {
            cout << z << endl;
            cout << y << endl;
            getline(cin, x);
        }
        for(int i = 0; i < x.length(); i++)
        {
            char ch = x[i];
            if (!isspace(ch))
            {
                valid = true;
                return true;
            }
            else
            {
                cout << z << endl;
                break;
                
            }
            
        }
    }
    return false;
}

void stringInput(string &userInput, string x, string y)
{
    //Establish variables
    bool valid = false;
    
    //Iterating through the number of characters to check if a number is entered
    while(!valid)
    {
        string input;
        notBlank(input, x , y);
        for(int i = 0; i < input.length(); i++)
        {
            if (isalpha(input[i]) == false)
            {
                cout << y << endl;
            }
            else
            {
                if(i + 1 == input.length())
                {
                    userInput = input;
                    valid = true;
                }
            }
        }    
    }
    cout << "*program continues*" << endl;
    
}

int intInput(int &x, int y, int z)
{
    intInput:
    bool valid = false;
    while(valid != true)
    {
        notBlank(ageInput, "Please input the ticket-holders age", "*Error* Please enter a valid age in the correct format between 12 and 130.");
        for(int i = 0; i < ageInput.length(); i++)
        {
            if (isdigit(ageInput[i]) == true)
            {
                if(i + 1 == ageInput.length())
                {
                    cout << "program continues" << endl;
                    valid = true;
                }
                else
                {
                    
                }
            }
            else
            {
                cout << "*Error* Please enter a valid age in the correct format between 12 and 130." << endl;
                break;
            }
        }
    }
    stringstream agePtr (ageInput);
    agePtr >> x;
    if(y > x or x > z)
    {
        cout << "*Error* Please enter a valid age in the correct format between 12 and 130." << endl;
        goto intInput;
    }
    else
    {
        
    }
    return 0;
}

int main()
{
    string name;
    string commonOutput[2] = {"Please enter a valid input", "y"};
    stringInput(name, "Please input the ticket-holders name", commonOutput[0]);
    int age = 0;
    intInput(age, 12, 130);
    cout << name << ", " << age << endl;
    
    return 0;
}
