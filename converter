#include <iostream>

using namespace std;
int main()
{
    int numSeries = 12;
    int numSeries2 = 11;
    int numSeries3 = 43;
    int numberSeries[3] = {numSeries, numSeries2, numSeries3};
    int cost[3];
    string numSeriesStr = to_string(numSeries);
    for(int i = 0; i < 3; i++)
    {
        if(numSeriesStr.find("1[^ ]"))
        {
            int indexPos = numSeriesStr.find("1");
            string numOfMandmStr = numSeriesStr.substr(indexPos + 1);
            int numOfMandm = stoi(numOfMandmStr);
            cost[i] = numOfMandm * 3.00;
            cout << numOfMandm << endl << cost[i] << endl;
            break;
        }
        if(numSeriesStr.find("2[^ ]"))
        {
            int indexPos = numSeriesStr.find("2");
            string numOfWaterStr = numSeriesStr.substr(indexPos + 1);
            int numOfWater = stoi(numOfWaterStr);
            cost[i] = numOfWater * 2.00;
            cout << numOfWater << endl << cost[i] << endl;
            break;
        }
        if(numSeriesStr.find("3[^ ]"))
        {
            int indexPos = numSeriesStr.find("3");
            string numOfOJStr = numSeriesStr.substr(indexPos + 1);
            int numOfOJ = stoi(numOfOJStr);
            cost[i] = numOfOJ * 3.25;
            cout << numOfOJ << endl << cost[i] << endl;
            break;
        }
        if(numSeriesStr.find("4[^ ]"))
        {
            int indexPos = numSeriesStr.find("2");
            string numOfPCStr = numSeriesStr.substr(indexPos + 1);
            int numOfPC = stoi(numOfPCStr);
            cost[i] = numOfPC * 4.50;
            cout << numOfPC << endl << cost[i] << endl;
            break;
        }
        string numOfPopcornStr = numSeriesStr;
        int numOfPopcorn = stoi(numOfPopcornStr);
        cost[i] = numOfPopcorn * 2.50;
        cout << numOfPopcorn << endl << cost[i] << endl;
        break;
    }
    int totalCost = cost[0] + cost[1] + cost[2];
    return 0;
}
